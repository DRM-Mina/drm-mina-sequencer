{
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "strictNullChecks": true,
        "lib": ["es2020"],
        "target": "ES2020",
        "module": "ES2022",
        "declaration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "moduleResolution": "node",
        "noImplicitAny": true,
        "allowJs": true,
        "esModuleInterop": true,
        "strict": true,
        "alwaysStrict": true,
        "declarationMap": true,
        "strictFunctionTypes": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}
